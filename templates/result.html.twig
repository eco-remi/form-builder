<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background-color: #f5f5f5;
        }

        h1 {
            color: #333;
        }

        .question {
            margin-bottom: 20px;
        }

        .question h2 {
            font-size: 1.2em;
            color: #555;
        }

        .answers {
            list-style-type: none;
            padding: 0;
        }

        .answers li {
            margin: 5px 0;
        }

        .answers label {
            cursor: pointer;
        }

        .submit-btn {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #45a049;
        }

        .right {
            border: 1px solid green;
        }

        .wrong {
            border: 1px solid red;
        }

        table, tr, th, td {
            border: 1px solid black
        }

        .main-content {
            display: block;
            width: 100%;
        }
    </style>
</head>
<body>
<div class="main-content">
    <h1>{{ title }}</h1>
    <span style="width: 100%; margin: 10px;display: inline-block;">
        <a href="/results/dl?token={{ app.request.get('token') }}">Download zip file</a>
    </span>
    <table style="width: 100%;">
        <tr>
            <th>Name</th>
            <th>Score</th>
            <th>Date</th>
            <th>Check</th>
            <th>Cache</th>
        </tr>
        {% for line in results %}
            <tr>

                {% if line|length == 1 %}
                    <td><a href="/form/submit/{{ line[0] }}">{{ line[0] }}</a></td>
                {% else %}
                    {% for col in line %}
                        <td>{{ col }}</td>
                    {% endfor %}
                {% endif %}
            </tr>
        {% endfor %}
    </table>
</div>
</body>
</html>
